{
  "name": "major-match",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "vite build",
    "preview": "vite preview",
    "build:electron": "electron-builder"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^7.1.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "edu.virginia.batten.majormatch",
    "productName": "Batten Major Match",
    "asar": true,
    "compression": "maximum",
    "directories": { "output": "dist_electron" },
    "files": [
      "dist/**",
      "electron/**",
      "build/**",
      "package.json",
      "!**/*.map",
      "!**/*.log",
      "!**/*.md",
      "!**/tests/**",
      "!**/__tests__/**",
      "!**/.vite/**"
    ],
    "extraMetadata": { "main": "electron/main.cjs" },
    "win": {
      "target": ["portable"], 
      "icon": "build/BattenMajorMatch-icon.ico",
      "artifactName": "BattenMajorMatch-${version}.${ext}"
    },
    "mac": { "target": ["dmg"], "icon": "build/icon.icns" },
    "linux": { "target": ["AppImage"], "icon": "build/BattenMajorMatch-icon-1024.png" }
  }
}
